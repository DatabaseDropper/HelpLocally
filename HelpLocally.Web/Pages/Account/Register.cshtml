@page
@model HelpLocally.Web.Pages.Companies.RegisterModel
@{
    ViewData["Title"] = "Create";
}

<h1>Register User</h1>
<h1 class="bg-danger">@this.Model.Message</h1>
<form method="post">
    <div class="form-group">
        <input type="text" name="Login" class="form-control" placeholder="Customer Login *" value="" />
    </div>
    <div class="form-group">
        <input type="password" name="Password" class="form-control" placeholder="Customer Password *" value="" />
    </div>   
    <div class="form-group">
        <input type="submit" class="btnSubmit" value="Login" />
    </div>
</form>
