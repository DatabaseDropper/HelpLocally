@using System.Security.Claims
@if (this.User.Identity.IsAuthenticated)
{
    <b>Witaj, @(this.User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Name)?.Value)!</b>
    <br />
    <b>@string.Join(",", this.User.Claims.Where(x => x.Type == ClaimTypes.Role).Select(x => x.Value))</b>
    <br />
    <a href="/Account/SignIn?handler=logout">Wyloguj się.</a>
}
else
{
    <a href="/Account/SignIn">Zaloguj się</a>
}