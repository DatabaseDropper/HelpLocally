@page
@model HelpLocally.Web.Pages.Offers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (this.User.IsInRole("Company"))
{
    <p>
        <a asp-page="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa Firmy
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Offer)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Name)
                </td>     
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">Details |</a>
                    @if (this.User.IsInRole("Company"))
                    {
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
