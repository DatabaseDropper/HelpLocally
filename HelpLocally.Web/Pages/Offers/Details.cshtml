@page
@using HelpLocally.Common;
@model HelpLocally.Web.Pages.Offers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 Details</h1>
<h1 style="color:green">@this.Model.Message</h1>

<div>
    <h4>Offer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nazwa Firmy
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Offer.Company.Name)
        </dd>     
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Offer.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Offer.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Offer.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Offer.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Offer.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Offer.Type.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Offer.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Offer.Price)
        </dd>
    </dl>
</div>

@if (this.User.IsInRole(Roles.Customer))
{
    <form method="post">
        <input type="hidden" asp-for="Offer.Id" />
        <input type="submit" value="Kup" class="btn btn-success" />
    </form>
}

